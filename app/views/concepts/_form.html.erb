
<%= form_for(@concept, :url => { :action => "update" }) do |f| %>
  <% if @concept.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@concept.errors.count, "error") %> prohibited this concept from being saved:</h2>

      <ul>
      <% @concept.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <header class="row-fluid">
    <div class="col-md-offset-2 col-md-7 col-xs-offset-1 col-xs-10">
      <h4 class="title"><%= f.text_field :name, placeholder: 'Topic', autofocus: true %></h4>  
    </div>
  </header>


  <div class="row-fluid">
    <div class="col-md-offset-2 col-md-7 col-xs-offset-1 col-xs-10 content">
      <%= f.text_area :definition, placeholder: 'Definition', size: '120x3', class: 'resizable col-md-12 col-xs-12' %>  
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-md-offset-2 col-md-7 col-xs-offset-1 col-xs-10 content">
      <%= f.submit('Save', class: 'btn btn-lg btn-success save-concept') %> 
    </div>
  </div>

<% end %>

