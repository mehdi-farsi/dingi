<p id="notice"><%= notice %></p>

<h1>Listing Concepts</h1>

<table id="table-concepts">
  <thead>
    <tr>
      <th>Name</th>
      <th>Definition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concepts.each do |concept| %>
      <tr>
        <td><%= link_to concept.name, concept %></td>
        <td><%= concept.definition[0..50] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concept', new_concept_path %>

<script>
$(document).ready(function(){
    $('#table-concepts').DataTable();
});
</script>