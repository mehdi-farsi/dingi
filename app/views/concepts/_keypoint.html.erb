<%= form_for(:keypoint, :url => concept_keypoints_path(concept_id: concept), html: {id: "keypoint-#{keypoint.try(:id)}"}) do |f| %>
  <div class="row-fluid">
    <div class="col-md-offset-2 col-md-7 col-xs-offset-1 col-xs-10 content resizeable">
      <%= f.text_area :content, value: keypoint.try(:content), placeholder: 'Keypoint', class: 'resizable col-md-12 col-xs-12' %> 
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-md-offset-2 col-md-7 col-xs-offset-1 col-xs-10">
      <%= f.submit %>  
    </div>
  </div>
<% end %>

